<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerVertical="true"
    android:layout_marginBottom="1px"
    android:padding="10dp">

    <ImageView
        android:id="@+id/listImageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_account"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listName"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Miniket Rice Premium"
                android:textSize="12sp"
                android:layout_below="@id/listImageView"/>

            <TextView
                android:id="@+id/listQuentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="5 kg"
                android:textSize="10sp"
                android:layout_below="@id/listImageView"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="325tk "
                    android:textSize="10sp"
                    android:layout_below="@id/listImageView"/>

                <TextView
                    android:id="@+id/listPriceD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="308tk"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="10sp"
                    android:layout_below="@id/listImageView"/>

                <ImageView
                    android:id="@+id/listVendor"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/ic_nav_header"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/imgButtonAdd"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_input_add"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>